@model Entreprise_Projet.Models.Site

@{
    ViewData["Title"] = "Create";
}

<h1>Ajout d'un site</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSites">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomSite" class="control-label">Nom du Site :</label>
                <input asp-for="NomSite" class="form-control" />
                <span asp-validation-for="NomSite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ajouter" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour aux sites</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
